<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp4"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginTop="@dimen/dp4"
        android:orientation="vertical"
        app:cardElevation="@dimen/cardElevaion"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listitem_image_height"
                android:src="@drawable/paperranger" />

            <TextView
                android:id="@+id/tvCharityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:background="@color/omiseBlue"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/dp8"
                android:textColor="@color/white"
                android:textSize="@dimen/listitem_title_text_size"
                android:textStyle="bold"
                tools:text="Habitat for Humanity Thailand" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>